@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    
<!-- Hero Section -->
<section class="hero-section text-center">
    <div class="container">
        <h1 class="display-4">Welcome to Fitness Connect</h1>
        <p class="lead">Connect with fitness enthusiasts, track your progress, and achieve your fitness goals!</p>
        <a href="#" class="btn btn-primary btn-lg">Get Started</a>
    </div>
</section>

<div class="container mt-5">
    <h1>Workout Dashboard</h1>

    <!-- Current Workout Program Chart -->
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    Current Workout Program
                </div>
                <div class="card-body">
                    <canvas id="currentWorkoutChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Upcoming Workout Program -->
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    Upcoming Workout Program
                </div>
                <div class="card-body">
                    <!-- Add content for upcoming workout program -->
                </div>
            </div>
        </div>
    </div>

</div>
<!-- Features Section -->
<section class="features-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="feature-box text-center">
                    <i class="bi bi-person"></i>
                    <h3>User Profiles</h3>
                    <p>Create your personalized fitness profile and share your achievements with the community.</p>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="feature-box text-center">
                    <i class="bi bi-heart"></i>
                    <h3>Track Progress</h3>
                    <p>Track your fitness journey with our easy-to-use progress tracking tools.</p>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="feature-box text-center">
                    <i class="bi bi-chat"></i>
                    <h3>Community Chat</h3>
                    <p>Connect with other fitness enthusiasts, share tips, and motivate each other.</p>
                </div>
            </div>
        </div>
    </div>
</section>
</div>
